<!DOCTYPE html>
<html lang="en">

<!-- head -->

<%- include("./partials/head") %>

    <!-- hoja de estilos -->

    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="/css/stylesCart.css">
    
    <body>

        <!-- header -->

        <%- include("./partials/header") %>


            <main>

                <div class="contenedor-main">
                    <div class="top-main">
                        <img src="/img/ropa/jordan-luka-1-neo-turquoise-dn1772-104-9.jpeg" alt="imagen-producto">

                        <% productos.forEach((prodeuctosLista) => { %>

                        <div name="subtotal" class="descripcion-producto">
                            <h4>Subtotal</h4>
                            <p> $ <%= productosLista.precio%> </p>
                            <button>Delete</button>
                        </div>
                        <% }) %>
                        <input type="number" name = "cantidad" class="contador">
                        
                    </div>

                    <div name="cupon" class="middle-main">
                        <h4>Cupon</h4>
                        <div class="campo-de-texto">
                            <input type="text" placeholder="Codigo de descuento">
                            <button type="submit">Aplicar cupon</button>
                        </div>
                        <button type="submit">Actualizar carrito</button>
                    </div>

                        <div class="envio">
                            <h5>Envio</h5>
                            <input type="text" placeholder="Direccion">
                        </div>

                        <div class="finalizar">
                            <h5>Total</h5>
                            <P>$XXXX,XX</P>
                            <button type="submit">Finalizar</button>
                        </div>
                    </div>
                </div>
                <br />
          
            </main>

            <!-- footer -->

            <%- include("./partials/footerLogueado") %>

    </body>

</html>