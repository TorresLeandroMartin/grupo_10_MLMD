<!DOCTYPE html>
<html lang="en">

<!-- head -->

<%- include("./partials/head") %>

    <!-- hoja de estilos -->

    <link rel="stylesheet" href="/css/stylesCart.css">
    <link rel="stylesheet" href="css/normalize.css">

    <body>

        <!-- header -->

        <%- include("./partials/headerLogin") %>


            <main>

                <div class="contenedor-main">
                    <div class="top-main">
                        <img src="/img/jordan-luka-1-neo-turquoise-dn1772-104-9.jpeg" alt="imagen-producto">



                        <div class="descripcion-producto">
                            <h4>Lorem ipsum dolor sit amet consectetur.</h4>
                            <p>$XXXX,XX</p>
                            <button>Delete</button>
                        </div>
                        <div class="contador">
                            <p>-</p>
                            <p>1</p>
                            <p>+</p>
                        </div>
                    </div>

                    <div class="middle-main">
                        <h4>Cupon</h4>
                        <div class="campo-de-texto">
                            <input type="text" placeholder="Codigo de descuento">
