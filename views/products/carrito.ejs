                        </div>
                        <button type="submit">Actualizar carrito</button>
                    </div>

                    <div class="bottom-main">
                        <h4>Total carrito</h4>
                        <div class="subtotales">
                            <h5>Subtotal</h5>
                            <p>$XXXX,XX</p>
                        </div>
                        <div class="envio">
                            <h5>Envio</h5>
                            <input type="text" placeholder="Direccion">
                        </div>
                        <div class="finalizar">
                            <h5>Total</h5>
                            <P>$XXXX,XX</P>
                            <button type="submit">Finalizar</button>
                        </div>
                    </div>
                </div>

            </main>

            <!-- footer -->

            <%- include("./partials/footerLogueado") %>

