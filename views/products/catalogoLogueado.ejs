<!DOCTYPE html>
<html lang="en">

<!-- head -->

<%- include("./partials/head") %>

  <!-- hoja de estilos -->
  <link rel="stylesheet" href="css/normalize.css">
  <link href="/css/catalogo-logueado.css" rel="stylesheet">

  <body>
    <!-- header -->

    <%- include("./partials/header") %>

      <main>

        <div class="catalogo-subtitulo">
          <h4 class="subt">Productos</h4>

          <form class="categoria-estilo" action="" method="get">
            <select name="styles">
              <option value="all"> Todos </option>
              <option value="sport"> Deportivo </option>
              <option value="elegant"> Elegante</option>
              <option value="accessory"> Accesorios </option>
              <option value="handbags"> Bolsos </option>
            </select>
          </form>
        </div>


        <div class="productos"> <!--   -->


          <input type="radio" id="enrollado-global" name="acceso" value="abrir">

          <input type="radio" id="cerrar-global" name="acceso" value="cerrar">


          <input type="radio" id="enrollado-inventario" name="acceso" value="abrir2">

          <input type="radio" id="cerrar-inventario" name="acceso" value="cerrar2">


          <section class="global"> <!-- container  -->

            <div class="enrollado-global"> <!-- btn-menu -->

              <h2>Global</h2>

              <label for="enrollado-global" class="btn-global">
                <i class="fas fa-chevron-right">
                </i>
                <p>¡Click HNUBCVGYCBVFGBFYGYGYTYT!</p>
              </label> <!-- container > btn-menu > label -->

            </div>

          </section>


          <div class="principal-global"> <!-- container-menu -->

            <h2>Global</h2>

            <div class="scrollbar-container">
              <div class="desenrollar-global"> <!-- cont-menu -->

                <% for(let i=0; i < productos.length; i++) { %>

                  <article>

                    <div class="archivo-img">
                      <img src="/img/avatars/<%- productos[i].imagenDelProducto %>" alt="imagen-producto">
                    </div>


                    <img class="img2" src="/img/avatars/<%- productos[i].imagenDelProducto %>" alt="imagen-producto">
                    <div class="right-options-inventario">

                      <h3>
                        <%- productos[i].nombre %>
                      </h3>
                      <div class="detalles">
                        <label class="detalle"> Estilo :</label>
                        <p class="sub-detalle">
                          <%- productos[i].estilo%>
                        </p>
                        <label class="detalle"> Color :</label>
                        <p class="sub-detalle">
                          <%- productos[i].color%>
                        </p>
                        <label class="detalle"> Categoría : </label>
                        <p class="sub-detalle">
                          <%- productos[i].categoria%>
                        </p>
                        <label class="detalle"> Talle : </label>
                        <p class="sub-detalle">
                          <%- productos[i].talle%>
                        </p>
                      </div>
                      <p class="producto-descripcion">
                        <%- productos[i].descripcion %>
                      </p>

                      <a href="/productos/descripcion/<%- productos[i].id %>">
                        <i class="fas fa-chevron-right"></i>
                      </a>

                    </div>
                  </article>
                  <% } %>
                    <br />

              </div>
            </div>

            <label for="cerrar-global" class="btn-cerrar-global">
              <i class="fas fa-chevron-left"></i>
              Cerrar
            </label> <!-- container > btn-menu > label -->

          </div>


          <section class="inventario"> <!-- container  -->

            <div class="enrollado-inventario"> <!-- btn-menu -->

              <h2>Inventario</h2>

              <label for="enrollado-inventario" class="btn-inventario">
                <i class="fas fa-chevron-left">
                </i>
                <p>¡Click Aquívbvbbvbjrkek!</p>
              </label> <!-- container > btn-menu > label -->

            </div>

          </section>

          <div class="principal-inventario"> <!-- container-menu -->

            <h2>Inventario</h2>

            <div class="crear">
              <a class="upload" href="/productos/crearProducto">
                <i class="fa-solid fa-plus"></i>
                <hr class="linea-verde">
              </a>
            </div>

            <div class="scrollbar-container">
              <div class="desenrollar-inventario">

                <% for(let i=0; i < productos.length; i++) { %>

                  <article>

                    <div class="scrollbar-content">

                      <div class="archivo-img">
                        <img src="/img/avatars/<%- productos[i].imagenDelProducto %>">
                      </div>

                      <img class="img2" src="/img/avatars/<%- productos[i].imagenDelProducto %>">


                      <div class="right-options-inventario">
                        <h3>
                          <%- productos[i].nombre %>
                        </h3>
                        <div class="detalles">
                          <label class="detalle"> Estilo : </label>
                          <p class="sub-detalle">
                            <%- productos[i].estilo%>
                          </p>
                          <label class="detalle"> Color : </label>
                          <p class="sub-detalle">
                            <%- productos[i].color%>
                          </p>
                          <label class="detalle"> Categoría : </label>
                          <p class="sub-detalle">
                            <%- productos[i].categoria%>
                          </p>
                          <label class="detalle"> Talle : </label>
                          <p class="sub-detalle">
                            <%- productos[i].talle%>
                          </p>
                        </div>

                        <p class="producto-descripcion">
                          <%- productos[i].descripcion %>
                        </p>

                        <label class="producto-precio"> $ <%- productos[i].precio %> </label>

                        <div class="botones-inventario">

                          <a href="/productos/edicion/<%- productos[i].id %>">
                            <button class="boton-edita">Editar</button>
                          </a>



                          <form action='/productos/borrar/<%- productos[i].id %>?_method=DELETE' method="POST">
                            <button class="boton-borra" type="submit">Borrar</button>
                          </form>
                        </div>
                      </div>
                    </div>



                  </article>




                  <br />
                  <% } %>




                    <label for="cerrar-inventario" class="btn-cerrar-inventario">
                      Cerrar
                      <i class="fas fa-chevron-right"></i>
                    </label> <!-- container > btn-menu > label -->
              </div>
            </div>
          </div>



      </main>

      <!-- footer -->

      <%- include("./partials/footerLogueado") %>

  </body>

</html>