<header>

    <article class="header-tres">
        <img class="logo" src="/img/resto/logo-HC2.png" alt="logo">
        <div class="buscador-bar">
            <input class="buscador" type="search" name="busqueda" placeholder="Buscar...">
            <i class="fa-solid fa-magnifying-glass"></i>
        </div>

        <div class="carrito">
            <a href="/usuarios/carrito"><i class="fas fa-shopping-cart"></i></a>
        </div>


        <% if (locals.user) { %>
            
                <article>
                  
                    <a href="/usuarios/perfil/<%=  user.id %>">
                        Hola <%= user.nombre %>
                            <img src="/img/avatars/<%= user.imagen %>" width="50"
                                style="border-radius: 100%">
                    </a>
                    
                    <a href="/usuarios/cerrarsesion"> <i class="fas fa-sign-in-alt"> </i> Salir </a>
                </article>

                <% } else { %>

                    <div class="user">
                        <a href="/usuarios/iniciarsesion" class="login"> Iniciar Sesion <i
                                class="fas fa-user-circle"></i></a>
                    </div>

                    <% } %>
                        
    </article>

    <nav>
        <ul>
            <% if (locals.user) { %>
                <li type="none"> <a href="/homeOficial"> Inicio </a> </li>
                <li type="none"> <a href="/productos/catalogoLogueado"> Productos </a> </li>
                <li type="none"> <a href="/homeOficial#nosotros"> Nosotros </a> </li>
                <li type="none"> <a href="#contacto"> Contacto </a> </li>
                <% } else { %>
                    <li type="none"> <a href="/"> Inicio </a> </li>
                    <li type="none"> <a href="/productos/catalogo"> Productos </a> </li>
                    <li type="none"> <a href="/#nosotros"> Nosotros </a> </li>
                    <li type="none"> <a href="#contacto"> Contacto </a> </li>
                    <% } %>
        </ul>
    </nav>

    <div class="burger-menu">
        <i class="fas fa-bars"></i>
    </div>

</header>